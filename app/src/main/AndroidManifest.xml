<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.jeroendatema.evernotetemplates" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.jeroendatema.evernotetemplates.TemplateListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.jeroendatema.evernotetemplates.TemplateDetailActivity"
            android:label="@string/title_template_detail"
            android:parentActivityName="nl.jeroendatema.evernotetemplates.TemplateListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TemplateListActivity" />
        </activity>
    </application>

</manifest>
